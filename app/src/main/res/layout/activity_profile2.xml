<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dn.ProfileActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Your Name"
        android:ems="10"
        android:id="@+id/Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="49dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/AvaName"
        android:layout_below="@+id/Name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:text="Your Avatar's Name"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget: $10000"
        android:id="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/AvaName"
        android:layout_alignStart="@+id/AvaName"
        android:textSize="20dp"
        android:textColor="@color/darkFrosting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Donuts: 0"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentStart="true"
        android:textColor="@color/darkFrosting"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:src="@drawable/doughnut"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView13"
        android:layout_alignBottom="@+id/Name"
        android:scaleType="fitXY"
        android:onClick="goAwards"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Click Donut to Edit Avatar"
        android:id="@+id/textView14"
        android:layout_above="@+id/textView12"
        android:layout_alignTop="@+id/AvaName"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/puppy"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
